  var url = window.location.href;
  var tmp1 = url.split("?bookingNo=");
  var tmp2 = tmp1[1].split("&");

  //定时检测如果支付成功了自动调转到我的订单
    window.setInterval(getPay, 2000); 
    function getPay(){ 
        console.log('检测'+tmp2[0]+'支付状态');
