		/*确认出库*/
		function submitDoc() {
			var val = $('#g_num').val();
			if(isNaN(val) || val == "") {
				alert('库存请填写数字！');
				return false;
			}
			if(val > g_num) {
				alert('库存不足！');
				return false;
			}
			//执行出库操作
			$.ajax({
				type: "POST",
				url: "/erp/insertPutout",
				data: {
					category: g_category,
					store: $("#ck_store").val(),
					date: $("#date").val(),
					name: g_name,
					num: val,
					unitPrice: g_unitPrice,
					id: g_id,
					order_no:$("#order_no").val()
				},
				success: function(data) {
					if(data == 200) {
						//alert('新增成功！');
