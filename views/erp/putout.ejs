					var html = "";
					var totalout = 0;
					for(var i in data) {
						var arr1 = (data[i].name).split(".");
						html += "<tr>";
						html += "<td>" + data[i].store + "</td>";
						html += "<td>" + arr1[1] + "</td>";
						html += "<td>" + arr1[0] + "</td>";
