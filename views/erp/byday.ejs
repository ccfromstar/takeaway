<!--财务日统计表-->
<table class="am-form">
	<tr>
		<td>
			<input type="text" id="k_date" style="cursor:pointer;height: 40px" readonly class="Wdate" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})"></input>
		</td>
		<td>
			<input type="text" id="k_date_end" style="cursor:pointer;height: 40px" readonly class="Wdate" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})"></input>
		</td>
		<td>
			<input id="k_store" type="text" list="list3" placeholder="门店" onblur="setCat(1);" />
			<datalist id="list3">
					<option value="所有">门店</option>
					<%for(var i in obj4){%>
						<option value="<%=obj4[i].name%>">
					<%}%>
				</datalist>
		</td>
		<td>
			<input id="k_category" type="text" list="list1" placeholder="类别" />
			<datalist id="list1">
					<option value="所有">所有</option>
					<%for(var i in obj3){%>
						<option value="<%=obj3[i].name%>">
					<%}%>
				</datalist>
		</td>
		<td>
			<input type="text" id="cate_id" placeholder="所属分类" list="mlist1" onblur="setMat();" />
			<datalist id="mlist1">
					<%for(var i in obj5){%>
						<option value="<%=obj5[i].no%>">
							<%=obj5[i].name%>
						</option>
						<%}%>
				</datalist>
		</td>
		<td>
			<input type="text" id="k_name" value="*.所有" placeholder ="材料名" list="mlist" />
			<datalist id="mlist">
					<option value="*.所有">
					<%for(var i in obj2){%>
						<option value="<%=obj2[i].no+"."+obj2[i].name%>">
							<%}%>
				</datalist>
		</td>
		<td>
			<input type="text" id="s_name" placeholder="材料名检索" onblur="filtermlist()" />
		</td>
		<td>
			<button class="am-btn am-btn-primary" onclick="filter()">筛选</button>
		</td>
	</tr>
</table>
<br/>
