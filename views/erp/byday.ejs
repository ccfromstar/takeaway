<script>
	var myDate = new Date();
	var y = myDate.getFullYear();
	var m = (((myDate.getMonth() + 1) + "").length == 1) ? "0" + (myDate.getMonth() + 1) : (myDate.getMonth() + 1);
	var d = (((myDate.getDate()) + "").length == 1) ? "0" + (myDate.getDate()) : (myDate.getDate());
	var _date = y + "-" + m + "-" + d;
	$('.Wdate').val(_date);
	/*获取入库列表*/
	function getDate() {
		var tmp = $("#k_name").val();
		var s = tmp.split('.');
		$.ajax({
			type: "POST",
			url: "/erp/getPutInbyDay",
			data: {
				k_store: $("#k_store").val(),
				k_category: $("#k_category").val(),
				k_date: $("#k_date").val(),
				k_date_end: $("#k_date_end").val(),
				k_name: s[1],
				k_cate_id: $("#cate_id").val()
			},
			success: function(data) {
				var html = "";
				var totalout = 0;
				var totaldif = 0;
				for(var i in data) {
					html += "<tr>";
					html += "<td>" + data[i].date + "</td>";
					html += "<td>" + data[i].store + "</td>";
					html += "<td>" + data[i].name + "</td>";
					html += "<td>" + data[i].category + "</td>";
					html += "<td>" + data[i].num + "</td>";
					html += "<td>" + data[i].unit + "</td>";
					html += "<td>" + data[i].total + "元</td>";
					html += "<td>" + data[i].unitPrice + "元</td>";
					html += "<td>" + data[i].difference + "元</td>";
					html += "</tr>";
					totalout += data[i].total;
					totaldif += data[i].difference;
				}
				totalout = Math.round(totalout * 100) / 100;
				totaldif = Math.round(totaldif * 100) / 100;
				$("#content").html(html);
				//计算当天总支出和总差价
				$('#totalout').html(totalout);
				$('#totaldif').html(totaldif);
			}
		});
	}
	/*获取出库列表*/
	function getDateUse() {
		var tmp = $("#k_name").val();
		var s = tmp.split('.');
		$.ajax({
			type: "POST",
			url: "/erp/getPutoutbyDay",
			data: {
				k_store: $("#k_store").val(),
				k_category: $("#k_category").val(),
				k_date: $("#k_date").val(),
				k_date_end: $("#k_date_end").val(),
				k_name: s[1]
			},
			success: function(data) {
				var html = "";
				var totaluse = 0;
				for(var i in data) {
					html += "<tr>";
					html += "<td>" + data[i].date + "</td>";
					html += "<td>" + data[i].store + "</td>";
					html += "<td>" + data[i].name + "</td>";
					html += "<td>" + data[i].category + "</td>";
					html += "<td>" + data[i].num + "</td>";
					html += "<td>" + data[i].unitPrice + "元</td>";
					html += "<td>" + data[i].total + "元</td>";
					html += "</tr>";
					totaluse += data[i].total;
				}
				$("#contentuse").html(html);
				//计算当天总消耗
				totaluse = Math.round(totaluse * 100) / 100;
				$('#totaluse').html(totaluse);
			}
		});
	}

	function filter() {
		getDate();
		getDateUse();
	}
	//filter();

	/*根据名店加载分类*/
	function setCat(i) {
		if(i == 1) {
			var h = '';
			<%for(var i in obj3){%>
			if('<%=obj3[i].sname%>' == $('#k_store').val()) {
				h += '<option value="<%=obj3[i].name%>"><%=obj3[i].name%></option>';
			}
			<%}%>
			$('#list1').html(h);
		}
	}
	
	function filtermlist(){
		var v = $('#s_name').val();
		var html = '';
		<%for(var i in obj2){%>
		var n = '<%=obj2[i].name%>';
		if(n.indexOf(v) != -1){
			html += '<option value="<%=obj2[i].no+"."+obj2[i].name%>">';
		}			
		<%}%>
		$('#mlist').html(html);
	}
	
	function setMat(){
		var v = $('#cate_id').val();
		var html = '';
		<%for(var i in obj2){%>
		var n = '<%=obj2[i].no%>';
		if(n == v){
			html += '<option value="<%=obj2[i].no+"."+obj2[i].name%>">';
		}			
		<%}%>
		$('#mlist').html(html);
	}
	
	/*导出入库Excel表*/
	function toExcelin() {
		var tmp = $("#k_name").val();
		var s = tmp.split('.');
		$.ajax({
			type: "POST",
			url: "/erp/toExcelputinD",
			data: {
				k_store: $("#k_store").val(),
				k_category: $("#k_category").val(),
				k_date: $("#k_date").val(),
				k_date_end: $("#k_date_end").val(),
				k_name: s[1],
				k_cate_id: $("#cate_id").val()
			},
			success: function(data) {
				window.open("/excelop/temp/" + data);
			}
		});
	}
	/*导出出库Excel表*/
	function toExcelout() {
		var tmp = $("#k_name").val();
		var s = tmp.split('.');
		$.ajax({
			type: "POST",
			url: "/erp/toExcelputoutD",
			data: {
				k_store: $("#k_store").val(),
				k_category: $("#k_category").val(),
				k_date: $("#k_date").val(),
				k_date_end: $("#k_date_end").val(),
				k_name: s[1],
				k_cate_id: $("#cate_id").val() 
			},
			success: function(data) {
				window.open("/excelop/temp/" + data);
			}
		});
	}
</script>
